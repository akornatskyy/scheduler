{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "jsx": "react-jsx",
    "strict": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "$shared/*": ["shared/*"],
      "$features/*": ["features/*"]
    }
  },
  "include": ["src/**/*"]
}
