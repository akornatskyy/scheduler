{
  "name": "web",
  "version": "0.0.0-dev",
  "description": "A fully managed cron job scheduler",
  "scripts": {
    "start": "webpack serve",
    "lint": "eslint . --max-warnings 0",
    "build": "tsc && webpack",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/scheduler.git"
  },
  "keywords": [
    "scheduler",
    "cron",
    "job",
    "service"
  ],
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akornatskyy/scheduler/issues"
  },
  "homepage": "https://github.com/akornatskyy/scheduler",
  "dependencies": {
    "check-compiler": "^1.4.0",
    "immer": "^11.1.3",
    "react": "^19.2.3",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.3",
    "react-router": "7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser-webpack-plugin": "^5.3.16",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^\\$shared/(.*)$": "<rootDir>/src/shared/$1",
      "^\\$features/(.*)$": "<rootDir>/src/features/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts",
      "<rootDir>/src/**/*.test.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/shared/setup-tests.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  }
}
