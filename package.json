{
  "name": "scheduler-ui",
  "version": "1.5.1",
  "description": "A fully managed cron job scheduler",
  "main": "ui/index.js",
  "scripts": {
    "start": "webpack serve",
    "lint": "eslint webpack.config.js ui/ --max-warnings 0",
    "build": "rm -rf static && webpack",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/scheduler.git"
  },
  "keywords": [
    "scheduler",
    "cron",
    "job",
    "service"
  ],
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akornatskyy/scheduler/issues"
  },
  "homepage": "https://github.com/akornatskyy/scheduler",
  "dependencies": {
    "immutability-helper": "^3.1.1",
    "react": "^19.2.3",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.3",
    "react-router-dom": "7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser-webpack-plugin": "^5.3.16",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^\\$shared/(.*)$": "<rootDir>/ui/shared/$1",
      "^\\$features/(.*)$": "<rootDir>/ui/features/$1"
    },
    "testMatch": [
      "<rootDir>/ui/**/*.test.ts",
      "<rootDir>/ui/**/*.test.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/ui/shared/setup-tests.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  }
}
